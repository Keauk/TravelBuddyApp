<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TravelBuddyApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:TravelBuddyApp.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="TravelBuddyApp">

    <FlyoutItem Title="Main Page" Icon="icon_home.png">
        <ShellContent Route="MainPage" ContentTemplate="{DataTemplate views:MainPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Register" Icon="icon_register.png">
        <ShellContent Route="RegisterPage" ContentTemplate="{DataTemplate views:RegisterPage}" />
    </FlyoutItem>
    
</Shell>
